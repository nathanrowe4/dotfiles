[module/memory]
type = internal/memory
interval = 3
format = <bar-used>
label = %percentage_used% %
label-font = 10
label-foreground = ${colors.inactive-fg}

bar-used-indicator =
bar-used-width = 5
bar-used-fill-foreground = ${colors.inactive-fg}
bar-used-fill = "█ "
bar-used-empty = "█ "
bar-used-empty-foreground = ${colors.inactive-bg}


[template/network]
type = internal/network
interval = 2.0
ping-interval = 10
label-disconnected = "   No Connection"
label-disconnected-foreground = ${colors.inactive-fg}


[module/wireless-network]
inherits = template/network
interface = wlp4s0
format-connected = <label-connected>
label-connected = "   %essid%  (%signal%%)"
label-connected-foreground = ${colors.inactive-fg}


[module/wired-network]
type = internal/network
D-->interface = enp3s0
L-->interface = enp0s31f6
format-connected = <label-connected>
label-connected = "    %local_ip%"
label-connected-foreground = ${colors.inactive-fg}


[module/clock]
type = internal/date
interval = 1
format-padding = 0
format-background = ${colors.bg}
format-foreground = ${colors.fg}
date = %%{F#bb}%a %e %b%%{F-}
date-alt = %%{F#bb}%D%{F-}
time = %H:%M
time-alt = %H:%M:%S
label = "%date% %time%  "
format = <label>


[template/battery]
type = internal/battery
full-at = 99

ramp-capacity-foreground = ${colors.inactive-fg}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-discharging-foreground = ${colors.inactive-fg}
label-discharging = %percentage%%

label-charging-foreground = ${colors.arc-blue}
label-charging = 

format-discharging = <label-discharging> <ramp-capacity>
format-charging = <label-charging> <ramp-capacity>
format-full = <ramp-capacity>


[module/bat0]
inherit = template/battery
battery = BAT0

[module/bat1]
inherit = template/battery
battery = BAT1

