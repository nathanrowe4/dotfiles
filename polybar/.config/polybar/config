[colors]
bg          = #2f343f
fg          = #ffffff
inactive-bg = #2f343f
inactive-fg = #676E7D
urgent      = #E53935
arc-blue    = $ffffff


[template/bar]
enable-ipc = true
width = 100%
height = 27

background = ${colors.bg}
foreground = ${colors.fg}

border-bottom-size = 0
border-bottom-color = ${colors.inactive-bg}

overline-size = 0
overline-color = ${self.background}
underline-size = 1
underline-color = ${self.background}

padding-left = 0
padding-right = 0
module-margin-left = 3
module-margin-right = 3

font-0 = "DejaVu Sans:size=8;2"
font-1 = "FontAwesome:size=10;0"
wm-restack = i3
tray-position = 

[bar/laptop]
inherit = template/bar
monitor = ${env:MONITOR}
modules-left = i3
modules-center = wireless-network cpu memory
modules-right = bat0 bat1 clock

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = 
format-prefix-foreground = ${colors.inactive-fg}
exec = ~/.scripts/printmail.sh

[module/mxbattery]
type = custom/script
interval = 60
format = <label>
format-foreground = ${colors.fg}
exec = ~/.scripts/mxbattery.sh

[module/eth]
type = custom/script
interval = 60
format = €<label>
format-foreground = ${colors.inactive-fg}
exec = ~/.scripts/ethBalance.sh

[module/xbacklight]
