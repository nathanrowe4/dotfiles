[module/cpu]
type = internal/cpu
interval = 1.5
label = CPU %percentage%%
label-foreground = ${colors.white}
ramp-coreload-foreground = ${colors.white}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
format = <label> <ramp-coreload>


[module/memory]
type = internal/memory
interval = 3
label = DISK %percentage_used% %
label-font = 10
label-foreground = ${colors.white}
bar-used-indicator =
bar-used-width = 5
bar-used-fill = "█ "
bar-used-empty = "█ "
bar-used-fill-foreground = ${colors.white}
bar-used-empty-foreground = ${colors.grey}
format = <label> <bar-used>


[template/network]
type = internal/network
interval = 2.0
ping-interval = 10
label-disconnected = "   No Connection"
label-disconnected-foreground = ${colors.red}


[module/wireless-network]
inherits = template/network
interface = wlp2s0
format-connected = <label-connected>
label-connected = "   %essid%  (%signal%%)"
label-connected-foreground = ${colors.green}


[module/clock]
type = internal/date
interval = 1
format-padding = 0
format-background = ${colors.dark}
format-foreground = ${colors.purple}
date = %%{F#bb}%a %e %b%%{F-}
date-alt = %%{F#bb}%D%{F-}
time = %H:%M
time-alt = %H:%M:%S
label = "%date% %time%  "
format = <label>


[template/battery]
type = internal/battery
full-at = 99

ramp-capacity-foreground = ${colors.white}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-discharging-foreground = ${colors.white}
label-discharging = %percentage%%

label-charging-foreground = ${colors.purple}
label-charging = 

format-discharging = <label-discharging> <ramp-capacity>
format-charging = <label-charging> <ramp-capacity>
format-full = <ramp-capacity>


[module/bat]
inherit = template/battery
battery = BAT0

