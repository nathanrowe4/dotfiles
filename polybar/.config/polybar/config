[colors]
dark   = #282A36
grey   = #44475A
white  = #FFFFFF
purple = #BD93F9
green  = #50FA7B
red    = #FF5555

[template/bar]
enable-ipc = true
width = 100%
height = 25

background = ${colors.dark}
foreground = ${colors.purple}

border-bottom-size = 0
border-bottom-color = ${colors.grey}

overline-size = 0
overline-color = ${self.background}
underline-size = 1
underline-color = ${self.background}

padding-left = 0
padding-right = 0
module-margin-left = 3
module-margin-right = 3

font-0 = "DejaVu Sans:size=8;2"
font-1 = "FontAwesome:size=10;0"
wm-restack = i3
tray-position = 

[bar/laptop]
inherit = template/bar
monitor = ${env:MONITOR}
modules-left = i3
modules-center = cpu memory
modules-right = wireless-network bat clock

[module/mxbattery]
type = custom/script
interval = 60
format = <label>
format-foreground = ${colors.purple}
exec = ~/.scripts/mxbattery.sh

[module/xbacklight]
type = internal/xbacklight
output = eDP-1
format = <ramp> <bar>

ramp-0 = 
ramp-0-foreground = ${colors.grey}
ramp-1 = 
ramp-1-foreground = ${colors.white}
ramp-2 = 
ramp-2-foreground = ${colors.purple}

bar-width = 12
bar-indicator = |
bar-indicator-font = 6
bar-indicator-foreground = ${colors.purple}
bar-fill = ─
bar-fill-font = 6
bar-fill-foreground = ${colors.purple}
bar-empty = ─
bar-empty-font = 6
bar-empty-foreground = ${colors.grey}

[module/volume]
