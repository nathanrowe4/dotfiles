set $darkgrey    #928374
set $darkred     #cc241d
set $red         #fb4934
set $darkgreen   #98971a
set $green       #b8bb26
set $darkyellow  #d79921
set $yellow      #fabd2f
set $blue    #458588
set $blue        #83a598
set $darkmagenta #b16286
set $magenta     #d3869b
set $darkcyan    #689d6a
set $cyan        #8ec07c
set $lightgrey   #a89984
set $white       #ebdbb2
# use custom colors for black
set $darkblack   #1d2021

# window colours
#                       BORDER      BACKGROUND  TEXT        INDICATOR   CHILD_BORDER
client.focused          $white      $black      $white      $darkblack  $white
client.unfocused        $black      $black      $white      $darkblack  $background
client.focused_inactive $black      $black      $white      $darkblack  $background
client.urgent           $darkred    $darkred    $black      $darkred    $darkred
client.background       $background

# launch polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# launch compton
exec_always --no-startup-id compton --config $HOME/.compton.conf

# lock screen
bindsym $mod+shift+x exec i3lock --color "$background"

# set wallpaper:
exec_always feh --bg-fill $HOME/.config/wallpaper/dracula_wallpaper.png

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Screen brightness controls
# xrandr | grep " connected" | cut -f1 -d " "
# xrandr --output eDP-1 --brightness 1
# Use these commands since xbacklight is "No outputs have backlight property"
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
#https://cravencode.com/post/essentials/enable-tap-to-click-in-i3wm/
#bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen capture
bindsym Control+Print exec gnome-screenshot -i
# Set the screens to turn off after 600 seconds of inactivity:
exec "xset dpms 600"

# Manage startup
exec gnome-terminal
